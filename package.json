{
  "name": "daily-bias",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "npx serve@latest out",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:integration": "vitest run __tests__/integration",
    "test:unit": "vitest run --exclude __tests__/integration/**",
    "test:a11y:unit": "vitest run __tests__/**/*.a11y.test.*",
    "validate": "pnpm type-check && pnpm lint && pnpm test",
    "audit:deps": "pnpm audit",
    "audit:security": "pnpm audit --audit-level=moderate",
    "clean": "rm -rf .next out",
    "clean:build": "pnpm clean && pnpm build",
    "diagnostics": "bash scripts/diagnostics.sh",
    "mobile:build": "pnpm build && npx cap sync",
    "mobile:sync": "npx cap sync",
    "android:open": "npx cap open android",
    "android:run": "cd android && ./gradlew installDebug && adb shell am start -n com.debiasdaily.app/.MainActivity",
    "android:build": "cd android && ./gradlew assembleDebug",
    "android:build:release": "bash scripts/android-build.sh --type release --output apk",
    "android:build:aab": "bash scripts/android-build.sh --type release --output aab",
    "android:build:clean": "bash scripts/android-build.sh --clean",
    "android:test": "bash scripts/android-test.sh",
    "android:lint": "cd android && ./gradlew lint",
    "android:validate": "pnpm android:lint && pnpm android:test",
    "android:check": "bash scripts/validate-android-build.sh",
    "ios:open": "npx cap open ios",
    "android:sync": "pnpm build && npx cap sync android",
    "ios:sync": "pnpm build && npx cap sync ios",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:check": "bash scripts/check-e2e-setup.sh",
    "e2e:manual": "SKIP_WEBSERVER=1 playwright test",
    "e2e:visual": "playwright test tests/e2e/visual-regression.spec.ts",
    "e2e:visual:update": "playwright test tests/e2e/visual-regression.spec.ts --update-snapshots",
    "android:test": "playwright test --config=playwright.android.config.ts",
    "test:a11y": "playwright test tests/e2e/accessibility.spec.ts",
    "test:all": "pnpm test:run && pnpm test:integration && pnpm e2e --project=chromium --project=mobile-chrome --project=mobile-safari",
    "test:lighthouse": "node scripts/lighthouse-test.js",
    "test:load": "k6 run tests/load/load-test.js",
    "test:security": "bash scripts/security-check.sh",
    "device:check": "bash scripts/device-test-helper.sh check-android; bash scripts/device-test-helper.sh check-ios",
    "device:check-android": "bash scripts/device-test-helper.sh check-android",
    "device:check-ios": "bash scripts/device-test-helper.sh check-ios",
    "device:helper": "bash scripts/device-test-helper.sh",
    "device:test": "bash scripts/device-test-helper.sh test"
  },
